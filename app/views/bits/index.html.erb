<p id="notice"><%= notice %></p>

<h1>Bits</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Invention</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bits.each do |bit| %>
      <tr>
        <td><%= bit.name %></td>
        <td><%= bit.invention %></td>
        <td><%= link_to 'Show', bit %></td>
        <td><%= link_to 'Edit', edit_bit_path(bit) %></td>
        <td><%= link_to 'Destroy', bit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bit', new_bit_path %>
